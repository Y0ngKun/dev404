<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ezen.ex02.mapper.ImageVOMapper">

<!-- java의 boolean인 fileType은 문자 '0'이나 '1'로 처리(true는 '1') -->
	<insert id="insert">
	
		insert into CARROT_IMAGEVO (uuid, uploadpath, filename,filetype, bno)
		values (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno} )
		
	</insert>
	
	<!-- 첨부 파일 하나 지우기,uuid가 PK임 -->
	<delete id="delete">

		delete from CARROT_IMAGEVO where uuid = #{uuid}

	</delete>
	
	<select id="findByBno" resultType="org.ezen.ex02.domain.ImageVO">
	
		select * from CARROT_IMAGEVO where bno = #{bno}
		
	</select>
	
	<delete id="deleteAll">

		delete CARROT_IMAGEVO where bno = #{bno}

	</delete>
	
	<select id="getOldFiles"
	
		resultType="org.ezen.ex02.domain.ImageVO">

		select * from CARROT_IMAGEVO where uploadpath = to_char(sysdate -1 ,'yyyy/mm/dd')
		<!-- 어제 날자로 경로가 된 첨부파일 데이터 반환 -->

	</select>

</mapper>