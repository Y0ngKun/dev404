--테이블 만들기
CREATE TABLE stores_image (
   image_id NUMBER PRIMARY KEY,
   origin_image_name VARCHAR2(256) NOT NULL,
   new_image_name VARCHAR2(256) NOT NULL,
   image_path VARCHAR2(256) NOT NULL
);

--시퀀스 만들기
CREATE SEQUENCE stores_image_seq START WITH 1 INCREMENT BY 1;

--시퀀스 자동 증가 트리거
CREATE OR REPLACE TRIGGER stores_image_trigger
BEFORE INSERT ON stores_image
FOR EACH ROW
BEGIN
   :NEW.image_id := stores_image_seq.NEXTVAL;
END;



--테이블 삽입 테스트
INSERT INTO stores_image (origin_image_name, new_image_name, image_path)
VALUES ('image1.jpg', 'new_image1.jpg', '/path/to/images/image1.jpg');
